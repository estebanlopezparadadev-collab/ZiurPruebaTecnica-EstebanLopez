@page "/documentos"
@using ZiurPruebaTecnica.Models
@using ZiurPruebaTecnica.Services
@inject DataService DataService
@rendermode InteractiveServer

<PageTitle>Listado de Documentos</PageTitle>

<div class="container mt-4">
    <h2 class="mb-4">Visualización de Documentos</h2>

    @if (documentos == null)
    {
        <div class="d-flex align-items-center">
            <strong>Cargando datos...</strong>
            <div class="spinner-border ms-auto" role="status" aria-hidden="true"></div>
        </div>
    }
    else
    {

        <div class="mb-3">
            <input type="text"
                class="form-control"
                placeholder="Filtrar por descripción..."
                @bind = "textoFiltro"
                @bind:event="oninput"/>
        </div>
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Código</th>
                        <th>Descripción</th>
                        <th>Estado (VActiva)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doc in DocumentosFiltrados)
                    {
                        <tr>
                            <td><span class="badge bg-secondary">@doc.Codigo</span></td>
                            <td>@doc.Descripcion</td>
                            <td>
                                @if (doc.VActiva)
                                {
                                    <span class="text-success">✔ Activo</span>
                                }
                                else
                                {
                                    <span class="text-danger">✘ Inactivo</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {

    public string textoFiltro = "";

    private List<Documento> DocumentosFiltrados => documentos?
    .Where(d => string.IsNullOrWhiteSpace(textoFiltro)
        || d.Descripcion.Contains(textoFiltro, StringComparison.OrdinalIgnoreCase))
    .ToList() ?? new();

    private List<Documento>? documentos;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            documentos = await DataService.GetDocumentosAsync();
        }
        catch (Exception ex)
        {
            //manejo de errores
            Console.WriteLine($"Error: {ex.Message}");
        }
    }
}